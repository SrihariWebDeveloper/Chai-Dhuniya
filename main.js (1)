//functions starts
nextBtn[0].onclick = function(){
  imgeList.style.transform = "translateX(0px)";
  for(i=0;i<8;i++){
    nextBtn[i].classList.remove("active");
  }this.classList.add("active");
} 
nextBtn[1].onclick = function(){
  imgeList.style.transform = "translateX(-800px)";
  for(i=0;i<8;i++){
    nextBtn[i].classList.remove("active");
  }this.classList.add("active");
} 
