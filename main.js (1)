//functions to about page
aboutBtn.onclick = function(){
  aboutPage.classList.add('show');
} 
lastBtn.onclick = function(){
  aboutPage.classList.remove('show');
} 
//functions to login page
loginBtn.onclick = function(){
  signinPage.classList.add('show');
} 
signinBtn.onclick = function(){
  signinPage.classList.remove('show');
} 

//functions to signup
signupBtn.onclick = function(){
  signinPage.classList.remove('show');
  signupPage.classList.add('show'); 
} 
signupLast.onclick = function(){
  signupPage.classList.remove('show'); 
} 